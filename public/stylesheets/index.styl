@require "./normalize"
@require "./normalize-opentype"

//
// spacing & flow
//
margin = 1.5rem
*
  margin-top 0
* + *
  margin-top margin

html
  // 1 rem is 20px
  font-size 125%
  line-height 1.5

body
  font-family "AdobeGaramondPremierPro", "Hoefler Text", Palatino, "Palatino Linotype", serif
  color #222
  background #e1e1e1 url("/images/bg7.jpg")

// h1, h2, h3, h4, h5, h6, li, p, span
  // MASSIVELY slows down page load when on body element :(
  // text-rendering optimizeLegibility

h1, h2, h3, h4, h5, h6, ul, ol, p, .logos, hr, blockquote
  margin-left auto
  margin-right auto

  // gives 10px left and right space on iphone 3G
  max-width 300px

  @media screen and (min-width: 450px)
    max-width 430px

  @media screen and (min-width: 543px)
    max-width 523px

  // wide enough for my name on one line, with 10px breathing
  @media screen and (min-width: 600px)
    max-width 590px

  // big enough for 33em, with 10px breathing
  @media screen and (min-width: 680px)
    max-width 33rem

ol > li + li, ul > li + li
  margin-top 0

//
// actual styling
//

.header, header, footer
  width 100%
  padding-top 2*margin
  padding-bottom 2*margin
  font-size margin

.header,
header,
footer
  background-color #1d2327
  background-color #03271c
  background-color #063829
  color #f2f2f2

.header a:link,
.header a:visited,
header a:link,
header a:visited,
footer a,
footer a:link,
footer a:visited
  text-decoration none
  color #739ecd

.header a:active, .header a:hover,
header a:active, header a:hover,
footer a:active, footer a:hover
  color #a2bfdd

header, .header
  text-shadow #111 0px 1px 1px
  width 100%
  box-shadow inset 0 -20px 15px -20px #000
  border-bottom 2px solid #fff

  h1 a:link,
  h1 a:visited,
  h1 a:link,
  h1 a:visited
    color white
    // font-size 5.9rem
    -moz-transition none
    -webkit-transition none
    font-size 2rem

  h1
    margin-top 0
    font-size 2rem
  h2
    font-size 1.5rem
  h1, h2
    text-shadow #111 0px 2px 2px

h1, h2, h3
  font-weight normal

span[data-var] span


//
// tangle
//
.TKAdjustableNumberHelp
  margin-top 0
